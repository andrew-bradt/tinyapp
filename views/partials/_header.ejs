<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if(!user) { %>
        <a class="nav-item nav-link" href="/login">Login</a>
        <a class="nav-item nav-link" href="/register">Register</a>
        <% } %>
      </div>
      <% if(user) { %>
        <div class="navbar-nav" style="margin-left: auto;">
          <form class="d-inline-flex" action="/logout" method="POST">
            <p class='nav-item' style="color: rgba(255,255,255,.5);"class="nav-item">Logged in as: <%= user.email %>!</p>
            <button class="nav-item btn btn-primary">Logoff</button>
          </form>
        </div>
      <% } %> 
    </div>
  </nav>
</header>